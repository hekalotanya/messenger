generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                              Int            @id @default(autoincrement())
  username                        String         @unique @db.VarChar(50)
  password                        String         @db.VarChar(50)
  createdAt                       DateTime       @default(now()) @map("created_at") @db.Timestamp(6)
  token                           String         @db.VarChar(255)
  chat_messages                   chatMessages[] @relation("chat_messagesTousers")
  chats_chats_recipient_idTousers chats[]        @relation("chats_recipient_idTousers")
  chats_chats_sender_idTousers    chats[]        @relation("chats_sender_idTousers")
}

model chatMessages {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  chatId    Int      @map("chat_id")
  authorId  Int      @map("author_id")
  users     users    @relation("chat_messagesTousers", fields: [authorId], references: [id])
  chats     chats    @relation(fields: [chatId], references: [id])

  @@map("chat_messages")
}

model chats {
  id                              Int            @id @default(autoincrement())
  senderId                        Int            @map("sender_id")
  recipientId                     Int            @map("recipient_id")
  created_at                      DateTime       @default(now()) @db.Timestamp(6)
  users_chats_recipient_idTousers users          @relation("chats_recipient_idTousers", fields: [recipientId], references: [id])
  users_chats_sender_idTousers    users          @relation("chats_sender_idTousers", fields: [senderId], references: [id])
  chat_messages                   chatMessages[]
}
